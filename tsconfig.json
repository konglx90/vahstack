{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "vahstack-cli",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true
  },
  "include": ["vahstack-cli"],
  "exclude": ["node_modules", "dist", "vahstack-cli/server/**/*.ts"]
}
